# Database
DATABASE_URL=postgresql://user:password@localhost:5432/bookmyforex

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Payment Gateway (Stripe) - Alternative
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Email Service (SendGrid/AWS SES)
EMAIL_SERVICE_API_KEY=your_email_service_key
EMAIL_FROM=noreply@bookmyforex.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# KYC Verification Service
KYC_API_KEY=your_kyc_service_api_key
KYC_API_URL=https://api.kycservice.com

# Forex Rate Provider
FOREX_RATE_API_KEY=your_forex_rate_api_key
FOREX_RATE_API_URL=https://api.forexrates.com

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# AWS S3 (for document storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=bookmyforex-documents
AWS_REGION=ap-south-1

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

